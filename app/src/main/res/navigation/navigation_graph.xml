<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.turkey.view.login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_singup"
            app:destination="@id/singup" />
        <action
            android:id="@+id/action_login_to_city"
            app:destination="@id/city" />
    </fragment>
    <fragment
        android:id="@+id/singup"
        android:name="com.example.turkey.view.singup"
        android:label="fragment_singup"
        tools:layout="@layout/fragment_singup" >
        <action
            android:id="@+id/action_singup_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_singup_to_city"
            app:destination="@id/city" />
    </fragment>
    <fragment
        android:id="@+id/city"
        android:name="com.example.turkey.view.city"
        android:label="fragment_city"
        tools:layout="@layout/fragment_city" />
</navigation>