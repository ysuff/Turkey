<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.CityDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cityDetailImageView"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:src="@drawable/adana"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/cityDetailCityNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Şehir Adı"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:textSize="40sp"
            />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkButtonAdd"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                app:icon="@drawable/check"
                app:iconTint="@color/black"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/visitAddButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:icon="@drawable/visit"
                app:iconTint="@color/black"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gezilecek Yerler"
            android:textColor="@color/blue"
            android:layout_margin="5dp"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/cityDetailVisitPlaceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gezilecek Yerler"

            android:elevation="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rounded_corner_background"
            android:drawablePadding="8dp"
            android:paddingEnd="8dp"
            android:gravity="start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meşhur Yemekler"
            android:textColor="@color/blue"
            android:layout_margin="5dp"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/cityDetailCityFoodTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meşhur yemekleri"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rounded_corner_background"
            android:drawablePadding="8dp"
            android:paddingEnd="8dp"
            android:gravity="start"

            />


    </LinearLayout>

</ScrollView>
